<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/padding_medium"
    android:layout_marginBottom="@dimen/margin_medium"
    android:background="@drawable/bg_dish_card">

    <!-- Dish Image -->
    <ImageView
        android:id="@+id/ivDishImage"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        android:background="@drawable/bg_image_placeholder"
        android:src="@drawable/ic_launcher_foreground"/>

    <!-- Dish Info -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginStart="@dimen/margin_medium">

        <TextView
            android:id="@+id/tvDishName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cơm lá"
            android:textSize="@dimen/text_size_medium"
            android:textColor="@color/text_primary"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tvDishQuantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số lượng: 01"
            android:textSize="@dimen/text_size_small"
            android:textColor="@color/text_secondary"
            android:layout_marginTop="4dp"/>

        <!-- Price Badge -->
        <TextView
            android:id="@+id/tvDishPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15.000VND"
            android:textSize="@dimen/text_size_small"
            android:textColor="@color/primary_orange"
            android:textStyle="bold"
            android:background="@drawable/bg_price_badge"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:layout_marginTop="8dp"/>
    </LinearLayout>
</LinearLayout>
