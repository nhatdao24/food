<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/background_white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Top Status Bar Space -->
        <View
            android:layout_width="match_parent"
            android:layout_height="24dp"/>

        <!-- Progress Indicator -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="@dimen/padding_medium"
            android:paddingEnd="@dimen/padding_medium"
            android:paddingTop="@dimen/padding_small"
            android:paddingBottom="@dimen/padding_medium">

            <View
                android:layout_width="0dp"
                android:layout_height="4dp"
                android:layout_weight="1"
                android:background="@drawable/progress_indicator"
                android:layout_marginEnd="4dp"/>

            <View
                android:layout_width="0dp"
                android:layout_height="4dp"
                android:layout_weight="1"
                android:background="@color/divider"
                android:layout_marginStart="4dp"/>
        </LinearLayout>

        <!-- Content Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/padding_large">

            <!-- Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/food_app"
                android:textSize="@dimen/text_size_xlarge"
                android:textColor="@color/text_primary"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"/>

            <!-- Subtitle -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/register_title_1"
                android:textSize="@dimen/text_size_medium"
                android:textColor="@color/text_primary"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/margin_small"/>

            <!-- Description -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/register_subtitle"
                android:textSize="@dimen/text_size_normal"
                android:textColor="@color/text_secondary"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="@dimen/margin_large"/>

            <!-- Store Name -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/store_name"
                android:textSize="@dimen/text_size_normal"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:id="@+id/etStoreName"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/bg_input_field"
                android:paddingStart="@dimen/padding_medium"
                android:paddingEnd="@dimen/padding_medium"
                android:textSize="@dimen/text_size_normal"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="@dimen/margin_medium"/>

            <!-- Business Type -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/business_type"
                android:textSize="@dimen/text_size_normal"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="8dp"/>

            <Spinner
                android:id="@+id/spinnerBusinessType"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/bg_input_field"
                android:paddingStart="@dimen/padding_medium"
                android:paddingEnd="@dimen/padding_medium"
                android:layout_marginBottom="@dimen/margin_medium"/>

            <!-- Specific Address -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/specific_address"
                android:textSize="@dimen/text_size_normal"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:id="@+id/etAddress"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/bg_input_field"
                android:paddingStart="@dimen/padding_medium"
                android:paddingEnd="@dimen/padding_medium"
                android:textSize="@dimen/text_size_normal"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="@dimen/margin_medium"/>

            <!-- Representative Name -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/representative_name"
                android:textSize="@dimen/text_size_normal"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:id="@+id/etRepresentativeName"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/bg_input_field"
                android:paddingStart="@dimen/padding_medium"
                android:paddingEnd="@dimen/padding_medium"
                android:textSize="@dimen/text_size_normal"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="@dimen/margin_medium"/>

            <!-- Phone Number -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/phone_number"
                android:textSize="@dimen/text_size_normal"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:id="@+id/etPhoneNumber"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/bg_input_field"
                android:paddingStart="@dimen/padding_medium"
                android:paddingEnd="@dimen/padding_medium"
                android:textSize="@dimen/text_size_normal"
                android:textColor="@color/text_primary"
                android:inputType="phone"
                android:layout_marginBottom="@dimen/margin_medium"/>

            <!-- Email -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/email"
                android:textSize="@dimen/text_size_normal"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/bg_input_field"
                android:paddingStart="@dimen/padding_medium"
                android:paddingEnd="@dimen/padding_medium"
                android:textSize="@dimen/text_size_normal"
                android:textColor="@color/text_primary"
                android:inputType="textEmailAddress"
                android:layout_marginBottom="@dimen/margin_large"/>

            <!-- Continue Button -->
            <Button
                android:id="@+id/btnContinue"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="@string/continue_btn"
                android:textSize="@dimen/text_size_medium"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:background="@drawable/bg_button_primary"
                android:layout_marginTop="@dimen/margin_medium"/>

        </LinearLayout>

        <!-- Bottom Navigation Bar Space -->
        <View
            android:layout_width="match_parent"
            android:layout_height="24dp"/>

    </LinearLayout>

</ScrollView>

