<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/background_white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Top Status Bar Space -->
        <View
            android:layout_width="match_parent"
            android:layout_height="24dp"/>

        <!-- Progress Indicator -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="@dimen/padding_medium"
            android:paddingEnd="@dimen/padding_medium"
            android:paddingTop="@dimen/padding_small"
            android:paddingBottom="@dimen/padding_medium">

            <View
                android:layout_width="0dp"
                android:layout_height="4dp"
                android:layout_weight="1"
                android:background="@drawable/progress_indicator"
                android:layout_marginEnd="4dp"/>

            <View
                android:layout_width="0dp"
                android:layout_height="4dp"
                android:layout_weight="1"
                android:background="@drawable/progress_indicator"
                android:layout_marginStart="4dp"/>
        </LinearLayout>

        <!-- Content Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/padding_large">

            <!-- Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/food_app"
                android:textSize="@dimen/text_size_xlarge"
                android:textColor="@color/text_primary"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"/>

            <!-- Subtitle -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/register_title_2"
                android:textSize="@dimen/text_size_medium"
                android:textColor="@color/text_primary"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/margin_small"/>

            <!-- Description -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/register_subtitle"
                android:textSize="@dimen/text_size_normal"
                android:textColor="@color/text_secondary"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="@dimen/margin_large"/>

            <!-- ID Number -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/id_number"
                android:textSize="@dimen/text_size_normal"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:id="@+id/etIdNumber"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/bg_input_field"
                android:paddingStart="@dimen/padding_medium"
                android:paddingEnd="@dimen/padding_medium"
                android:textSize="@dimen/text_size_normal"
                android:textColor="@color/text_primary"
                android:inputType="number"
                android:layout_marginBottom="@dimen/margin_medium"/>

            <!-- Issue Date -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/issue_date"
                android:textSize="@dimen/text_size_normal"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="8dp"/>

            <Spinner
                android:id="@+id/spinnerIssueDate"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/bg_input_field"
                android:paddingStart="@dimen/padding_medium"
                android:paddingEnd="@dimen/padding_medium"
                android:layout_marginBottom="@dimen/margin_medium"/>

            <!-- Issue Place -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/issue_place"
                android:textSize="@dimen/text_size_normal"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:id="@+id/etIssuePlace"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/bg_input_field"
                android:paddingStart="@dimen/padding_medium"
                android:paddingEnd="@dimen/padding_medium"
                android:textSize="@dimen/text_size_normal"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="@dimen/margin_medium"/>

            <!-- Bank Name -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bank_name"
                android:textSize="@dimen/text_size_normal"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:id="@+id/etBankName"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/bg_input_field"
                android:paddingStart="@dimen/padding_medium"
                android:paddingEnd="@dimen/padding_medium"
                android:textSize="@dimen/text_size_normal"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="@dimen/margin_medium"/>

            <!-- Bank Account Number -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bank_account"
                android:textSize="@dimen/text_size_normal"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:id="@+id/etBankAccount"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/bg_input_field"
                android:paddingStart="@dimen/padding_medium"
                android:paddingEnd="@dimen/padding_medium"
                android:textSize="@dimen/text_size_normal"
                android:textColor="@color/text_primary"
                android:inputType="number"
                android:layout_marginBottom="@dimen/margin_medium"/>

            <!-- Account Holder Name -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/account_holder"
                android:textSize="@dimen/text_size_normal"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:id="@+id/etAccountHolder"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/bg_input_field"
                android:paddingStart="@dimen/padding_medium"
                android:paddingEnd="@dimen/padding_medium"
                android:textSize="@dimen/text_size_normal"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="@dimen/margin_medium"/>

            <!-- Bank Branch -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bank_branch"
                android:textSize="@dimen/text_size_normal"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:id="@+id/etBankBranch"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/bg_input_field"
                android:paddingStart="@dimen/padding_medium"
                android:paddingEnd="@dimen/padding_medium"
                android:textSize="@dimen/text_size_normal"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="@dimen/margin_large"/>

            <!-- Complete Button -->
            <Button
                android:id="@+id/btnComplete"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="@string/complete_btn"
                android:textSize="@dimen/text_size_medium"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:background="@drawable/bg_button_primary"
                android:layout_marginTop="@dimen/margin_medium"/>

        </LinearLayout>

        <!-- Bottom Navigation Bar Space -->
        <View
            android:layout_width="match_parent"
            android:layout_height="24dp"/>

    </LinearLayout>

</ScrollView>

