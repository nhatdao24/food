<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_light">

    <!-- Top Bar -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/white"
        android:elevation="4dp"
        android:paddingStart="@dimen/padding_medium"
        android:paddingEnd="@dimen/padding_medium">

        <TextView
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="‹"
            android:textSize="32sp"
            android:textColor="@color/text_primary"
            android:gravity="center_vertical"
            android:paddingEnd="16dp"
            android:clickable="true"
            android:focusable="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/new_orders"
            android:textSize="@dimen/text_size_large"
            android:textColor="@color/text_primary"
            android:textStyle="bold"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <!-- Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/orderListContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/padding_medium">

            <!-- Order Card 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_order_card"
                android:orientation="vertical"
                android:layout_marginBottom="@dimen/margin_medium">

                <!-- Order Item -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="8dp">

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:scaleType="centerCrop"
                        android:background="@drawable/bg_image_placeholder"
                        android:src="@drawable/ic_launcher_foreground"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Đơn hàng:"
                            android:textSize="@dimen/text_size_normal"
                            android:textColor="@color/text_primary"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cơm tấm, 01"
                            android:textSize="@dimen/text_size_small"
                            android:textColor="@color/text_secondary"
                            android:layout_marginTop="2dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Thời gian giao: 30 phút sau đặt hàng"
                            android:textSize="@dimen/text_size_small"
                            android:textColor="@color/text_secondary"
                            android:layout_marginTop="2dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tổng tiền: 60.000VND"
                            android:textSize="@dimen/text_size_small"
                            android:textColor="@color/text_secondary"
                            android:layout_marginTop="2dp"/>
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="60.000VND"
                        android:textSize="@dimen/text_size_normal"
                        android:textColor="@color/primary_orange"
                        android:textStyle="bold"
                        android:layout_gravity="center_vertical"/>
                </LinearLayout>

                <!-- Buttons -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <Button
                        android:id="@+id/btnCancelOrder1"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:text="@string/cancel_order"
                        android:textSize="@dimen/text_size_small"
                        android:textColor="@color/white"
                        android:background="@drawable/bg_button_red"
                        android:textAllCaps="false"
                        android:layout_marginEnd="8dp"/>

                    <Button
                        android:id="@+id/btnConfirmOrder1"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:text="@string/confirm_order"
                        android:textSize="@dimen/text_size_small"
                        android:textColor="@color/white"
                        android:background="@drawable/bg_button_primary"
                        android:textAllCaps="false"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Order Card 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_order_card"
                android:orientation="vertical"
                android:layout_marginBottom="@dimen/margin_medium">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="8dp">

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:scaleType="centerCrop"
                        android:background="@drawable/bg_image_placeholder"
                        android:src="@drawable/ic_launcher_foreground"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="xxxxx"
                            android:textSize="@dimen/text_size_normal"
                            android:textColor="@color/text_primary"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Số lượng: 01"
                            android:textSize="@dimen/text_size_small"
                            android:textColor="@color/text_secondary"
                            android:layout_marginTop="2dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Thời gian giao: 2 tiếng sau đặt hàng"
                            android:textSize="@dimen/text_size_small"
                            android:textColor="@color/text_secondary"
                            android:layout_marginTop="2dp"/>
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="70.000VND"
                        android:textSize="@dimen/text_size_normal"
                        android:textColor="@color/primary_orange"
                        android:textStyle="bold"
                        android:layout_gravity="center_vertical"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <Button
                        android:id="@+id/btnCancelOrder2"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:text="@string/cancel_order"
                        android:textSize="@dimen/text_size_small"
                        android:textColor="@color/white"
                        android:background="@drawable/bg_button_red"
                        android:textAllCaps="false"
                        android:layout_marginEnd="8dp"/>

                    <Button
                        android:id="@+id/btnConfirmOrder2"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:text="@string/confirm_order"
                        android:textSize="@dimen/text_size_small"
                        android:textColor="@color/white"
                        android:background="@drawable/bg_button_primary"
                        android:textAllCaps="false"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Order Card 3 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_order_card"
                android:orientation="vertical"
                android:layout_marginBottom="@dimen/margin_medium">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="8dp">

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:scaleType="centerCrop"
                        android:background="@drawable/bg_image_placeholder"
                        android:src="@drawable/ic_launcher_foreground"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="xxxx"
                            android:textSize="@dimen/text_size_normal"
                            android:textColor="@color/text_primary"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Số lượng: 01"
                            android:textSize="@dimen/text_size_small"
                            android:textColor="@color/text_secondary"
                            android:layout_marginTop="2dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Thời gian giao: 90 phút sau đặt hàng"
                            android:textSize="@dimen/text_size_small"
                            android:textColor="@color/text_secondary"
                            android:layout_marginTop="2dp"/>
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="18.000VND"
                        android:textSize="@dimen/text_size_normal"
                        android:textColor="@color/primary_orange"
                        android:textStyle="bold"
                        android:layout_gravity="center_vertical"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <Button
                        android:id="@+id/btnCancelOrder3"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:text="@string/cancel_order"
                        android:textSize="@dimen/text_size_small"
                        android:textColor="@color/white"
                        android:background="@drawable/bg_button_red"
                        android:textAllCaps="false"
                        android:layout_marginEnd="8dp"/>

                    <Button
                        android:id="@+id/btnConfirmOrder3"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:text="@string/confirm_order"
                        android:textSize="@dimen/text_size_small"
                        android:textColor="@color/white"
                        android:background="@drawable/bg_button_primary"
                        android:textAllCaps="false"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>

